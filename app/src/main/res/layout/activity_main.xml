<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tool.tetsu2kasen.tnv_eg_v2.MainActivity"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.213333">
        <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/myView1"
        android:layout_marginLeft="18dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="0dp"
        app:srcCompat="@android:color/transparent" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/myView1"
            android:layout_marginLeft="18dp"
            android:layout_marginStart="18dp"
            android:layout_marginTop="0dp"
            app:srcCompat="@android:color/transparent" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/myView1"
            android:layout_marginLeft="18dp"
            android:layout_marginStart="18dp"
            android:layout_marginTop="0dp"
            app:srcCompat="@android:color/transparent" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/myView1"
            android:layout_marginLeft="18dp"
            android:layout_marginStart="18dp"
            android:layout_marginTop="0dp"
            app:srcCompat="@android:color/transparent" /></RelativeLayout>


    <LinearLayout
        android:id="@+id/mysand"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#24ffffff"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/myView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="#24ffffff"
            android:orientation="vertical">

            <TextView
                android:id="@+id/row1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Row_Mod01"
                android:textSize="30sp"
                android:scrollHorizontally="true"
                android:ellipsize="start"
                tools:text="Row_Mod01" />

            <TextView
                android:id="@+id/row2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Row_Mod02"
                android:scrollHorizontally="true"
                android:ellipsize="start"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/row3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Row_Mod03"
                android:scrollHorizontally="true"
                android:ellipsize="start"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/snr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Row_Mod03" />

            <LinearLayout
                android:id="@+id/myView2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="#24ffffff"
                android:orientation="horizontal">
                <!--色はaarrggbb(#16)-->

                <TextView
                    android:id="@+id/SAVE"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:text="SAVE"
                    android:onClick="SaveOnClick"
                    android:textSize="20sp"
                    />

                <TextView
                    android:id="@+id/LOAD"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:text="LOAD"
                    android:onClick="ReadOnClick"
                    android:textSize="20sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>






</LinearLayout>
